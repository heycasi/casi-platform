{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    }
  ],
  "ignoreFiles": [
    "**/node_modules/**",
    "public/**",
    "**/*.png",
    "**/*.jpg",
    "**/*.jpeg",
    "**/*.gif",
    "**/*.webp",
    "**/*.mp4",
    "**/*.mov",
    "**/*.zip",
    "**/*.pdf",
    "**/*.ico",
    "**/*.svg",
    "**/*.woff",
    "**/*.woff2",
    "**/*.eot",
    "**/*.ttf",
    "**/*.otf",
    ".next/**",
    "out/**",
    "dist/**",
    "build/**",
    "coverage/**",
    "package-lock.json",
    "pnpm-lock.yaml",
    "yarn.lock"
  ]
}
